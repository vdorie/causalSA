citation(auto = meta)

bibentry(
  bibtype = "Manual",
  author = c(
    person(given = c("Nicole", "Bohme"), family = "Carnegie"),
    person(given = "Masataka", family = "Harada"),
    person(given = "Vincent", family = "Dorie"),
    person(given = "Jennifer", family = "Hill")
  ),
  title = "treatSens: A Package to Assess Sensitivity of Causal Analyses to Unmeasured Confounding",
  year = sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date),
  note = sprintf("R package version %s", meta$Version),
  address = "New York, NY",
  header = "To cite the package 'treatSens', please use the citation below.\n\n",
  footer = paste(
    "We have invested a lot of time and effort in creating the",
    "'treatSens' package for use by other researchers.",
    "Please cite it in all papers where it is used."
  )
)
          
